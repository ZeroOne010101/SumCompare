<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SumCompare.ViewModels"
			 xmlns:views="clr-namespace:SumCompare.Views"
			 xmlns:i18n="clr-namespace:SumCompare.Assets.i18n"
             mc:Ignorable="d" d:DesignWidth="260" d:DesignHeight="280"
             x:Class="SumCompare.Views.MainView"
             x:DataType="vm:MainViewModel">
	
	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
		     to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<vm:MainViewModel />
	</Design.DataContext>

	<!--Styles-->
	<UserControl.Styles>
		<!--Menu-->
		<Style Selector="Menu">
			<Setter Property="Background" Value="Transparent"/>
		</Style>

		<!--MenuItem-->
		<Style Selector="MenuItem:pointerover">
			<Setter Property="Background" Value="DarkGray"/>
		</Style>

		<!--ComboBox-->
		<Style Selector="ComboBox">
			<Setter Property="SelectedIndex" Value="0"/>
			<Setter Property="MaxDropDownHeight" Value="130"/>
			<Setter Property="CornerRadius" Value="3"/>
			<Setter Property="Margin" Value="0 0 5 0"/>
			<Setter Property="HorizontalAlignment" Value="Right"/>
		</Style>
		
		<!--Button-->
		<Style Selector="Button">
			<Setter Property="Height" Value="38"/>
			<Setter Property="CornerRadius" Value="0"/>
		</Style>
	</UserControl.Styles>

	<!--Content-->
	<DockPanel>
		<!--Top Banner-->
		<Panel DockPanel.Dock="Top" Height="32">
			<Menu DockPanel.Dock="Top">
				<MenuItem Header="Datei">
					<MenuItem Header="Compare Files">
						<MenuItem.Icon>
							<CheckBox/>
						</MenuItem.Icon>
					</MenuItem>
					<MenuItem Header="Settings" Command="{Binding OpenSettings}"/>
				</MenuItem>
				<MenuItem Header="About" Command="{Binding OpenAboutWindow}"/>
			</Menu>
			<ComboBox Name="Algorithms" ItemsSource="{Binding AlgorithmItems}" SelectedItem="{Binding SelectedAlgorithm}"/>
		</Panel>

		<!--Middle Content-->
		<DockPanel DockPanel.Dock="Top"
				   Margin="5 10 5 5">
			<!--1st View-->
			<views:FileView DockPanel.Dock="Top"/>

			<!--2nd View-->
			<views:ChecksumView DockPanel.Dock="Top"
								Margin="0 10 0 0"/>
			<!--Button-->
			<Button DockPanel.Dock="Bottom"
					VerticalAlignment="Bottom"
					VerticalContentAlignment="Center"
					HorizontalAlignment="Stretch"
					HorizontalContentAlignment="Center"
					Content="GenerateButton"/>
		</DockPanel>
	</DockPanel>
</UserControl>
